{
  "definitions": {},
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Root",
  "type": "object",
  "required": [
    "id",
    "name",
    "description",
    "created",
    "type",
    "usedOutputs",
    "outputCount",
    "tags",
    "outputs"
  ],
  "properties": {
    "id": {
      "$id": "#root/id",
      "title": "Id",
      "description": "Experiment unique identifier",
      "anyOf": [
        {"type": "null"},
        {
          "allOf": [
            {"type": "integer"},
            {"minimum": 0}
          ]
        }
      ]
    },
    "name": {
      "$id": "#root/name",
      "title": "Name",
      "description": "Experiment name",
      "type": "string",
      "minLength": 1
    },
    "description": {
      "$id": "#root/description",
      "title": "Description",
      "type": "string",
      "description": "Experiment description"
    },
    "created": {
      "$id": "#root/created",
      "title": "Created",
      "description": "Unix timestamp of date when experiment was created",
      "type": "integer"
    },
    "type": {
      "$id": "#root/type",
      "title": "Type",
      "type": "integer",
      "description": "Experiment type. TVEP = 4",
      "const": 4
    },
    "usedOutputs": {
      "$id": "#root/usedOutputs",
      "title": "Usedoutputs",
      "type": "object",
      "properties": {
        "led": {
          "$id": "#root/usedOutputs/led",
          "title": "Led",
          "type": "boolean",
          "examples": [
            true, false
          ],
          "default": false
        },
        "image": {
          "$id": "#root/usedOutputs/image",
          "title": "Image",
          "type": "boolean",
          "examples": [
            true, false
          ],
          "default": false
        },
        "audio": {
          "$id": "#root/usedOutputs/audio",
          "title": "Audio",
          "type": "boolean",
          "examples": [
            true, false
          ],
          "default": false
        },
        "imageFile": {
          "$id": "#root/usedOutputs/imageFile",
          "title": "Imagefile",
          "type": "string"
        },
        "audioFile": {
          "$id": "#root/usedOutputs/audioFile",
          "title": "Audiofile",
          "type": "string"
        }
      },
      "oneOf": [
        {
          "required": ["led"]
        },
        {
          "required": ["audio", "audioFile"]
        },
        {
          "required": ["image", "imageFile"]
        }
      ]
    },
    "outputCount": {
      "$id": "#root/outputCount",
      "title": "Outputcount",
      "type": "integer",
      "minimum": 1,
      "maximum": 8
    },
    "tags": {
      "$id": "#root/tags",
      "title": "Tags",
      "type": "array",
      "uniqueItems": true,
      "items":{
        "$id": "#root/tags/items",
        "title": "Items",
        "type": "string",
        "minLength": 1
      }
    },
    "outputs": {
      "$id": "#root/outputs",
      "title": "Outputs",
      "type": "array",
      "minItems": 8,
      "maxItems": 8,
      "items":{
        "$id": "#root/outputs/items",
        "title": "Items",
        "type": "object",
        "required": [
          "id",
          "experimentId",
          "orderId",
          "outputType",
          "out",
          "wait",
          "patternLength",
          "pattern",
          "brightness"
        ],
        "properties": {
          "id": {
            "$id": "#root/outputs/items/id",
            "title": "Id",
            "description": "Output unique identifier",
            "type": "integer",
            "minimum": 0
          },
          "experimentId": {
            "$id": "#root/outputs/items/experimentId",
            "title": "Experimentid",
            "description": "Foreign ID of experiment",
            "type": "integer",
            "minimum": 0
          },
          "orderId": {
            "$id": "#root/outputs/items/orderId",
            "title": "Orderid",
            "description": "Number indicator of output order",
            "type": "integer",
            "minimum": 0,
            "maximum": 7
          },
          "outputType": {
            "$id": "#root/outputs/items/outputType",
            "title": "Outputtype",
            "type": "object",
            "properties": {
              "led": {
                "$id": "#root/usedOutputs/led",
                "title": "Led",
                "type": "boolean",
                "examples": [
                  true, false
                ],
                "default": false
              },
              "image": {
                "$id": "#root/usedOutputs/image",
                "title": "Image",
                "type": "boolean",
                "examples": [
                  true, false
                ],
                "default": false
              },
              "audio": {
                "$id": "#root/usedOutputs/audio",
                "title": "Audio",
                "type": "boolean",
                "examples": [
                  true, false
                ],
                "default": false
              },
              "imageFile": {
                "$id": "#root/usedOutputs/imageFile",
                "title": "Imagefile",
                "type": "string"
              },
              "audioFile": {
                "$id": "#root/usedOutputs/audioFile",
                "title": "Audiofile",
                "type": "string"
              }
            },
            "oneOf": [
              {
                "required": ["led"]
              },
              {
                "required": ["audio", "audioFile"]
              },
              {
                "required": ["image", "imageFile"]
              }
            ]
          },
          "out": {
            "$id": "#root/out",
            "title": "Out",
            "type": "number",
            "exclusiveMinimum": 0
          },
          "wait": {
            "$id": "#root/wait",
            "title": "Wait",
            "type": "number",
            "exclusiveMinimum": 0
          },
          "patternLength": {
            "$id": "#root/outputs/items/patternLength",
            "title": "Patternlength",
            "type": "integer",
            "minimum": 1,
            "maximum": 31
          },
          "pattern": {
            "$id": "#root/pattern",
            "title": "Pattern",
            "type": "integer"
          },
          "brightness": {
            "$id": "#root/outputs/items/brightness",
            "title": "Brightness",
            "type": "number",
            "exclusiveMinimum": 0
          }
        }
      }
    }
  }
}
