{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "$ref": "#/definitions/ExperimentTVEP",
  "definitions": {
    "ExperimentTVEP": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "id": {
          "type": "integer",
          "description": "Experiment unique identifier",
          "minimum": 0
        },
        "name": {
          "type": "string",
          "description": "Experiment name"
        },
        "description": {
          "type": "string",
          "description": "Experiment description"
        },
        "created": {
          "type": "integer",
          "description": "Unix timestamp of date when experiment was created"
        },
        "type": {
          "type": "integer",
          "description": "Experiment type. TVEP = 4",
          "const": 4
        },
        "usedOutputs": {
          "$schema": "#/definitions/UsedOutputs"
        },
        "outputCount": {
          "type": "integer",
          "description": "Number of used output count",
          "minimum": 1,
          "maximum": 8
        },
        "tags": {
          "type": "array",
          "description": "Array of tags of experiment",
          "items": {
            "type": "string"
          }
        },
        "outputs": {
          "type": "array",
          "description": "Array of output definitions for one experiment",
          "oneOf": [
            {
              "allOf": [
                {"minItems": 0},
                {"maxItems": 0}
              ]
            },
            {
              "allOf": [
                {"minItems": 8},
                {"maxItems": 8}
              ]
            }
          ],
          "items": {
            "$ref": "#/definitions/Output"
          }
        }
      },
      "required": [
        "name",
        "description",
        "created",
        "type",
        "usedOutputs",
        "outputCount",
        "tags",
        "outputs"
      ],
      "title": "ExperimentTVEP"
    },
    "Output": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "id": {
          "type": "integer",
          "minimum": 0
        },
        "experimentId": {
          "type": "integer",
          "minimum": 0
        },
        "orderId": {
          "type": "integer",
          "minimum": 0,
          "maximum": 7
        },
        "outputType": {
          "$schema": "#/definitions/OutputType"
        },
        "out": {
          "type": "integer",
          "exclusiveMinimum": 0
        },
        "wait": {
          "type": "integer",
          "exclusiveMinimum": 0
        },
        "patternLength": {
          "type": "integer",
          "minimum": 1,
          "maximum": 32
        },
        "pattern": {
          "type": "integer"
        },
        "brightness": {
          "type": "integer",
          "minimum": 0,
          "maximum": 100
        }
      },
      "required": [
        "id",
        "experimentId",
        "orderId",
        "outputType",
        "out",
        "wait",
        "patternLength",
        "pattern",
        "brightness"
      ],
      "title": "Output"
    }
  }
}
