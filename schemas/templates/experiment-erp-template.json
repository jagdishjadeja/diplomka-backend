{
  "definitions": {},
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Root",
  "type": "object",
  "required": [
    "id",
    "name",
    "description",
    "created",
    "type",
    "usedOutputs",
    "outputCount",
    "tags",
    "maxDistribution",
    "out",
    "wait",
    "edge",
    "random",
    "outputs",
    "sequenceId"
  ],
  "properties": {
    "id": {
      "$id": "#root/id",
      "title": "Id",
      "anyOf": [
        {"type": "null"},
        {
          "allOf": [
            {"type": "integer"},
            {"minimum": 0}
          ]
        }
      ],
      "description": "Experiment unique identifier",
      "minimum": 0
    },
    "name": {
      "$id": "#root/name",
      "title": "Name",
      "type": "string",
      "description": "Experiment name",
      "minLength": 1
    },
    "description": {
      "$id": "#root/description",
      "title": "Description",
      "type": "string",
      "description": "Experiment description"
    },
    "created": {
      "$id": "#root/created",
      "title": "Created",
      "type": "integer",
      "description": "Unix timestamp of date when experiment was created"
    },
    "type": {
      "$id": "#root/type",
      "title": "Type",
      "type": "integer",
      "description": "Experiment type. ERP = 1",
      "const": 1
    },
    "usedOutputs": {
      "$id": "#root/usedOutputs",
      "title": "Usedoutputs",
      "type": "object",
      "properties": {
        "led": {
          "$id": "#root/usedOutputs/led",
          "title": "Led",
          "type": "boolean",
          "examples": [
            true, false
          ],
          "default": false
        },
        "image": {
          "$id": "#root/usedOutputs/image",
          "title": "Image",
          "type": "boolean",
          "examples": [
            true, false
          ],
          "default": false
        },
        "audio": {
          "$id": "#root/usedOutputs/audio",
          "title": "Audio",
          "type": "boolean",
          "examples": [
            true, false
          ],
          "default": false
        },
        "imageFile": {
          "$id": "#root/usedOutputs/imageFile",
          "title": "Imagefile",
          "type": "string"
        },
        "audioFile": {
          "$id": "#root/usedOutputs/audioFile",
          "title": "Audiofile",
          "type": "string"
        }
      },
      "oneOf": [
        {
          "required": ["led"]
        },
        {
          "required": ["audio", "audioFile"]
        },
        {
          "required": ["image", "imageFile"]
        }
      ]
    },
    "outputCount": {
      "$id": "#root/outputCount",
      "title": "Outputcount",
      "type": "integer",
      "minimum": 1,
      "maximum": $TOTAL_OUTPUT_COUNT$
    },
    "tags": {
      "$id": "#root/tags",
      "title": "Tags",
      "type": "array",
      "uniqueItems": true,
      "items":{
        "$id": "#root/tags/items",
        "title": "Items",
        "type": "string",
        "minLength": 1
      }
    },
    "maxDistribution": {
      "$id": "#root/maxDistribution",
      "title": "Maxdistribution",
      "type": "integer",
      "minimum": 0
    },
    "out": {
      "$id": "#root/out",
      "title": "Out",
      "type": "integer",
      "exclusiveMinimum": 0
    },
    "wait": {
      "$id": "#root/wait",
      "title": "Wait",
      "type": "integer",
      "exclusiveMinimum": 0
    },
    "edge": {
      "$id": "#root/edge",
      "title": "Edge",
      "type": "integer",
      "enum": [0, 1]
    },
    "random": {
      "$id": "#root/random",
      "title": "Random",
      "type": "integer",
      "enum": [0, 1, 2, 3]
    },
    "outputs": {
      "$id": "#root/outputs",
      "title": "Outputs",
      "type": "array",
      "minItems": 9,
      "maxItems": 9,
      "items":{
        "$id": "#root/outputs/items",
        "title": "Items",
        "type": "object",
        "required": [
          "id",
          "experimentId",
          "orderId",
          "outputType",
          "pulseUp",
          "pulseDown",
          "distribution",
          "brightness",
          "dependencies"
        ],
        "properties": {
          "id": {
            "$id": "#root/outputs/items/id",
            "title": "Id",
            "description": "Output unique identifier",
            "type": "integer",
            "minimum": 0
          },
          "experimentId": {
            "$id": "#root/outputs/items/experimentId",
            "title": "Experimentid",
            "description": "Foreign ID of experiment",
            "type": "integer",
            "minimum": 0
          },
          "orderId": {
            "$id": "#root/outputs/items/orderId",
            "title": "Orderid",
            "description": "Number indicator of output order",
            "type": "integer",
            "minimum": 0,
            "maximum": $TOTAL_OUTPUT_COUNT$
          },
          "outputType": {
            "$id": "#root/outputs/items/outputType",
            "title": "Outputtype",
            "type": "object",
            "properties": {
              "led": {
                "$id": "#root/outputType/led",
                "title": "Led",
                "type": "boolean",
                "examples": [
                  true, false
                ],
                "default": false
              },
              "image": {
                "$id": "#root/outputType/image",
                "title": "Image",
                "type": "boolean",
                "examples": [
                  true, false
                ],
                "default": false
              },
              "audio": {
                "$id": "#root/outputType/audio",
                "title": "Audio",
                "type": "boolean",
                "examples": [
                  true, false
                ],
                "default": false
              },
              "imageFile": {
                "$id": "#root/outputType/imageFile",
                "title": "Imagefile",
                "type": "string"
              },
              "audioFile": {
                "$id": "#root/outputType/audioFile",
                "title": "Audiofile",
                "type": "string"
              }
            },
            "oneOf": [
              {
                "required": ["led"]
              },
              {
                "required": ["audio", "audioFile"]
              },
              {
                "required": ["image", "imageFile"]
              }
            ]
          },
          "pulseUp": {
            "$id": "#root/outputs/items/pulseUp",
            "title": "Pulseup",
            "type": "integer",
            "exclusiveMinimum": 0
          },
          "pulseDown": {
            "$id": "#root/outputs/items/pulseDown",
            "title": "Pulsedown",
            "type": "integer",
            "exclusiveMinimum": 0
          },
          "distribution": {
            "$id": "#root/outputs/items/distribution",
            "title": "Distribution",
            "type": "integer",
            "minimum": 0
          },
          "brightness": {
            "$id": "#root/outputs/items/brightness",
            "title": "Brightness",
            "type": "integer",
            "minimum": 0,
            "maximum": 100
          },
          "dependencies": {
            "$id": "#root/outputs/items/dependencies",
            "title": "Dependencies",
            "type": "array",
            "default": []
          }
        }
      }
    },
    "sequenceId": {
      "$id": "#root/sequenceId",
      "title": "Sequenceid",
      "anyOf": [
        {"type": "null"},
        {
          "allOf": [
            {"type": "integer"},
            {"minimum": 0}
          ]
        }
      ],
      "default": null
    }
  }
}
