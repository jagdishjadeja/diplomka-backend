{
  "name": "@stechy1/diplomka-backend",
  "version": "1.0.0",
  "description": "",
  "author": "Petr Štechmüller",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest ",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage --outputFile=coverage-summary.json",
    "test:badges": "npm run test:cov && npm run badges",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "badges": "jest-coverage-badges --output \"./badges\"",
    "migration:generate": "ts-node node_modules/.bin/typeorm migration:generate -n CreateExperiments",
    "migration:run": "ts-node node_modules/.bin/typeorm migration:run",
    "migration:revert": "ts-node node_modules/.bin/typeorm migration:revert"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/stechy1/diplomka-backend"
  },
  "dependencies": {
    "@crussell52/socket-ipc": "^0.3.0",
    "@nestjs-addons/in-memory-db": "^1.8.6",
    "@nestjs/common": "^6.8.5",
    "@nestjs/core": "^6.8.5",
    "@nestjs/platform-express": "^6.8.5",
    "@nestjs/platform-socket.io": "^6.8.5",
    "@nestjs/typeorm": "^6.2.0",
    "@nestjs/websockets": "^6.8.5",
    "@stechy1/diplomka-share": "^1.0.10",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.0",
    "rxjs": "^6.5.3",
    "serialport": "^8.0.5",
    "socket.io": "^2.3.0",
    "sqlite3": "^4.1.0",
    "typeorm": "^0.2.20"
  },
  "devDependencies": {
    "@nestjs/cli": "^6.14.0",
    "@nestjs/schematics": "^6.7.0",
    "@nestjs/testing": "^6.8.5",
    "@types/express": "^4.17.1",
    "@types/jest": "^24.0.21",
    "@types/node": "^12.12.5",
    "@types/serialport": "^7.0.4",
    "@types/socket.io": "^2.1.4",
    "@types/supertest": "^2.0.8",
    "jest": "^24.9.0",
    "jest-coverage-badges": "^1.1.2",
    "prettier": "^1.18.2",
    "supertest": "^4.0.2",
    "ts-jest": "^24.1.0",
    "ts-loader": "^6.2.1",
    "ts-node": "^8.4.1",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^5.20.0",
    "typescript": "^3.6.3"
  },
  "jest": {
    "coverageReporters": [
      "json-summary",
      "text",
      "lcov"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "roots": [
      "src",
      "test"
    ],
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "./coverage",
    "testEnvironment": "node"
  }
}
