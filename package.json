{
  "name": "@stechy1/diplomka-backend",
  "version": "1.0.0",
  "description": "",
  "author": "Petr Štechmüller",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/src/main",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "build:prepare": "ts-node prepare-templates.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:badges": "npm run test:cov && npm run badges",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "test:e2e:cov": "jest --config ./test/jest-e2e.json --coverage",
    "merge-coverage": "ts-node merge-coverage.ts --report coverage/e2e/coverage-final.json coverage/unit/coverage-final.json",
    "badges": "jest-coverage-badges --output \"./badges\"",
    "migration:generate": "ts-node node_modules/.bin/typeorm migration:generate -n CreateExperiments",
    "migration:run": "ts-node node_modules/.bin/typeorm migration:run",
    "migration:revert": "ts-node node_modules/.bin/typeorm migration:revert"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/stechy1/diplomka-backend"
  },
  "dependencies": {
    "@crussell52/socket-ipc": "^0.4.0",
    "@nestjs/common": "^7.0.8",
    "@nestjs/core": "^7.0.8",
    "@nestjs/platform-express": "^7.0.8",
    "@nestjs/platform-socket.io": "^7.0.8",
    "@nestjs/serve-static": "^2.1.0",
    "@nestjs/typeorm": "^7.0.0",
    "@nestjs/websockets": "^7.0.8",
    "@stechy1/diplomka-share": "^1.0.22",
    "dotenv": "^8.2.0",
    "is-ci": "^2.0.0",
    "jsonschema": "^1.2.6",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.5.5",
    "serialport": "^8.0.7",
    "socket.io": "^2.3.0",
    "sqlite3": "^4.1.1",
    "typeorm": "^0.2.24"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.1.2",
    "@nestjs/schematics": "^7.0.0",
    "@nestjs/testing": "^7.0.8",
    "@types/express": "^4.17.6",
    "@types/is-ci": "^2.0.0",
    "@types/jest": "^25.2.1",
    "@types/node": "^13.13.0",
    "@types/serialport": "^8.0.0",
    "@types/socket.io": "^2.1.4",
    "@types/supertest": "^2.0.8",
    "coveralls": "^3.0.11",
    "jest": "^25.3.0",
    "jest-coverage-badges": "^1.1.2",
    "prettier": "^2.0.4",
    "supertest": "^4.0.2",
    "ts-jest": "^25.4.0",
    "ts-loader": "^7.0.0",
    "ts-node": "^8.8.2",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^6.1.1",
    "typescript": "^3.8.3",
    "fs-extra": "latest",
    "istanbul-api": "latest"
  },
  "jest": {
    "coverageReporters": [
      "json"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage/unit",
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      ".module.ts$",
      ".spec.ts$"
    ]
  }
}
